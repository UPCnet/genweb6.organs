<tal:block tal:define="portal_url context/@@plone_portal_state/portal_url;
                 portal_https context/@@genweb.utils/portal_url_https;
                 custom_link viewlet/getCustomLink;
                 dades context/@@genweb.utils/getDadesUnitat;
                 lang viewlet/pref_lang;
                 getTitle viewlet/getTitle;
                 getLogo viewlet/getLogo"
           i18n:domain="genweb">

<div class="container">
  <div class="row align-items-center py-2">
    <div class="col-auto">
      <a href="https://www.upc.edu" target="_blank">
        <img tal:attributes="src string:${portal_url}/++genweb++static/images/logoUPC.png"
             i18n:attributes="alt label_alt_logo; title label_title_logo"
             width="207px" height="46px" />
      </a>
    </div>
    <div class="col text-end d-md-none">
      <button id='eines-menu' class="btn btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#nav-eines-mobile" aria-controls="nav-eines-mobile" aria-expanded="false" aria-label="Menú">
        <i class="bi bi-bars"></i>
      </button>
    </div>
    <div class="col d-none d-md-block">
      <ul id="eines" class="nav nav-pills justify-content-end">
        <li class="nav-item">
          <a class="nav-link" href="//serveistic.upc.edu/ca/organs-de-govern"
             i18n:domain="genweb6.organs"
             i18n:attributes="title Info_del_Servei; alt Info_del_Servei">
              <i class="bi bi-info-circle"></i> Info
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" accesskey="4"
               tal:attributes="href string:${portal_url}/${lang}/sitemap">
               <i class="bi bi-sitemap"></i>&nbsp;<tal:bk i18n:domain="plone" i18n:translate="Site Map">Site Map</tal:bk>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" accesskey="6"
               tal:attributes="href string:${portal_https}/${lang}/contact">
               <i class="bi bi-envelope"></i>&nbsp;<tal:bk i18n:domain="plone" i18n:translate="Contact">Contact</tal:bk>
          </a>
        </li>
        <li class="nav-item" tal:condition="viewlet/show_login">
            <button type="button" class="nav-link" href="" data-bs-toggle="modal" data-bs-target="#loginModal"
               tal:attributes="href string:${portal_url}/popup_login_form?came_from=${context/absolute_url}">
              <i class="bi bi-lock"></i>&nbsp;<tal:bk i18n:domain="genweb" i18n:translate="identificat">
               Identifica't</tal:bk>
            </button>
        </li>
        <li class="nav-item" tal:condition="not: viewlet/show_login">
            <a class="nav-link" tal:attributes="href string:${portal_url}/cas_logout">
              <i class="bi bi-sign-out"></i>&nbsp;<tal:bk i18n:domain="genweb6.organs" i18n:translate="">
               Logout </tal:bk>
            </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" tal:attributes="href string:${portal_url}/${lang}/search"><i class="bi bi-search" aria-hidden="true"></i>&nbsp;<tal:bk i18n:translate="" i18n:domain="genweb6.organs">Cercador</tal:bk></a>
        </li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="collapse d-md-none" id="nav-eines-mobile">
        <ul id="eines" class="nav nav-pills flex-column text-center">
          <li class="nav-item">
            <a class="nav-link" href="//serveistic.upc.edu/ca/organs-de-govern"
               i18n:domain="genweb6.organs"
               i18n:attributes="title Info_del_Servei; alt Info_del_Servei">
               <i class="bi bi-info-circle"></i> Info
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" accesskey="4"
                 tal:attributes="href string:${portal_url}/${lang}/sitemap">
                 <i class="bi bi-sitemap"></i>&nbsp;<tal:bk i18n:domain="plone" i18n:translate="Site Map">Site Map</tal:bk>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" accesskey="6"
                 tal:attributes="href string:${portal_url}/${lang}/contact">
                 <i class="bi bi-envelope"></i>&nbsp;<tal:bk i18n:domain="plone" i18n:translate="Contact">Contact</tal:bk>
            </a>
          </li>
          <li class="nav-item" tal:condition="viewlet/show_login">
              <button type="button" class="nav-link" href="" data-bs-toggle="modal" data-bs-target="#loginModal"
                 tal:attributes="href string:${portal_url}/popup_login_form?came_from=${context/absolute_url}">
                <i class="bi bi-lock"></i>&nbsp;<tal:bk i18n:domain="genweb" i18n:translate="identificat">
                 Identifica't</tal:bk>
              </button>
          </li>
          <li class="nav-item" tal:condition="not: viewlet/show_login">
              <a class="nav-link" tal:attributes="href string:${portal_url}/cas_logout">
                <i class="bi bi-sign-out"></i>&nbsp;<tal:bk i18n:domain="genweb6.organs" i18n:translate="">
                 Logout </tal:bk>
              </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" tal:attributes="href string:${portal_url}/${lang}/search"><i class="bi bi-search"></i>&nbsp;<tal:bk i18n:translate="" i18n:domain="genweb6.organs">Cercador</tal:bk></a>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="bannerOrgans mt-2">
        <tal:block tal:condition="getLogo">
              <img tal:attributes="src getLogo" style="height:78px; width: 100%; object-fit: contain;" />
              <div tal:condition="getTitle" class="bannerTitle d-none d-md-block">
                <p>Govern UPC </p>
              </div>
              <div tal:condition="getTitle" class="bannerTitle d-md-none">
                <p>Govern UPC </p>
              </div>
        </tal:block>
        <tal:block tal:condition="not:getLogo">
          <div class="bannerTitle d-none d-md-block">
            <p>Govern UPC </p>
          </div>
          <div class="bannerTitle d-md-none">
            <p>Govern UPC </p>
          </div>
          <div tal:attributes="class string:header-image nomarginleft ${viewlet/get_image_class}"></div>
        </tal:block>
      </div>
    </div>
  </div>
</div>

<div id="loginModal" class="modal fade" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true"
     i18n:domain="genweb">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="loginModalLabel" i18n:translate="label_start_session">Inicia la sessió</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Tanca"></button>
      </div>
      <div class="modal-body">
        The popup login form
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal" aria-label="Tanca">Tanca</button>
      </div>
    </div>
  </div>
</div>

</tal:block>