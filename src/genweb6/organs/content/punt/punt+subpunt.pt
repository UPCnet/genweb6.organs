<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="ca"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="ca"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="genweb6.organs">
<body>

<div metal:fill-slot="main">
  <div class="content-core"
       tal:define="filesinside view/FilesandDocumentsInside;
                   subpuntinside view/SubPuntsInside;">

    <!-- Título principal -->
    <div class="d-flex align-items-center mb-3">
      <h1 class="documentFirstHeading me-3 mb-0">
        <span class="me-2" tal:content="string:${context/proposalPoint}.">1</span>
        <span tal:content="view/title">Títol del punt</span>
      </h1>

      <span class="btn badge bg-secondary disabled bg-secondaryString fs-xl"
            tal:define="color view/getColor">
        <i class="bi bi-circle-fill me-1" aria-hidden="true"
           tal:attributes="style string:color:${color};"></i>
        <span tal:content="context/estatsLlista">Esborrany</span>
      </span>
    </div>

    <!-- Descripció -->
    <div tal:condition="view/message" class="mb-3">
      <div tal:content="structure view/message">Descripció</div>
    </div>

    <!-- Fitxers i documents relacionats -->
    <div class="card mb-3" tal:condition="filesinside">
      <div class="card-header fw-bolder" i18n:translate="">Fitxers i documents</div>
      <div class="card-body">
        <ul class="list-unstyled m-0">
          <li tal:repeat="item filesinside">
            <a tal:define="title item/title"
               class="text-decoration-none d-flex align-items-baseline"
               tal:attributes="href item/absolute_url;
                               target item/new_tab_target;
                               title title;
                               alt title">
              <i tal:attributes="class string:${item/classCSS} me-1 d-flex"></i>
              <tal:omit-tag tal:content="title">Nom fitxer</tal:omit-tag>
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Subpunts / Acords -->
    <div class="card" tal:condition="subpuntinside">
      <div class="card-header fw-bolder" i18n:translate="">Subpunts informatius / acords</div>
      <div class="card-body">
        <ul class="list-unstyled m-0">
          <li tal:repeat="item subpuntinside">
            <div class="d-flex align-items-center">
              <span class="me-2 text-primary fw-bold" tal:content="item/proposalPoint">1.1</span>
              <a class="flex-grow-1 text-decoration-none" tal:attributes="href item/absolute_url;">
                <span tal:content="item/title">Títol subpunt</span>
                <span tal:condition="item/agreement" class="ms-2 text-muted fs-s">
                  [<tal:omit-tag i18n:translate="">acord</tal:omit-tag> <span tal:content="item/agreement"></span>]
                </span>
              </a>
              <div class="btn badge bg-secondary disabled bg-secondaryString fs-xxs">
                <i class="bi bi-circle-fill me-1" tal:attributes="style string:color:${item/css}"></i>
                <tal:omit-tag tal:content="item/state">Nom fitxer</tal:omit-tag>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

</body>
</html>
